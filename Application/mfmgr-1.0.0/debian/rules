#!/usr/bin/make -f
# Sample debian/rules file - for GNU mfmgr.
# Copyright 1994,1995 by Ian Jackson.
# I hereby give you perpetual unlimited permission to copy,
# modify and relicense this file, provided that you do not remove
# my name from the file itself. (I assert my moral right of
# paternity under the Copyright, Designs and Patents Act 1988.)
# This file may have to be extensively modified

package = mfmgr
docdir = debian/tmp/usr/local/share/doc/$(package)
realuser = `pwd | awk -F '/' '{print $$3}'`

CC = gcc
CFLAGS = -g -Wall -I/usr/src/linux/include
INSTALL_PROGRAM = install

ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
  CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
   	INSTALL_PROGRAM += -s
endif

build:
	$(MAKE) -f $(CURDIR)/../calibrator/Makefile
	$(checkdir)
	$(CURDIR)/autogen.sh
# ./configure --prefix=/usr/local
	$(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)"
	touch build
	$(MAKE) install

clean:
	$(checkdir)
	rm -f build
	-$(MAKE) -i distclean
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars

binary-indep: checkroot build
	$(checkdir)

# There are no architecture-independent files to be uploaded
# generated by this package. If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	rm -rf debian/tmp
	install -d debian/tmp/DEBIAN $(docdir)
	install -m 755 debian/postinst debian/prerm debian/tmp/DEBIAN
	install -D -m 755 $(CURDIR)/debian/mfmgr.desktop $(CURDIR)/debian/tmp/usr/local/share/applications/mfmgr.desktop
	install -D -m 755 $(CURDIR)/debian/mfmgr.conf $(CURDIR)/debian/tmp/etc/mfmgr.conf
	install -D -m 755 $(CURDIR)/debian/getmfmgrcfg.sh $(CURDIR)/debian/tmp/etc/init.d/getmfmgrcfg.sh
	install -D -m 755 $(CURDIR)/../calibrator/calibrator $(CURDIR)/debian/tmp/usr/local/bin/calibrator
# install -D -m 755 $(CURDIR)/debian/mfmgr.desktop $(CURDIR)/debian/tmp/home/$(realuser)/바탕화면/mfmgr.desktop
# install -m 755 $(CURDIR)/debian/mfmgr.desktop /home/$(realuser)/바탕화면/mfmgr.desktop
	$(MAKE) INSTALL_PROGRAM="$(INSTALL_PROGRAM)" \
	prefix=$$(pwd)/debian/tmp/usr/local install
# cd debian/tmp && mv usr/local/info usr/local/man usr/local/share
	cp -a NEWS debian/copyright $(docdir)
	cp -a debian/changelog $(docdir)/changelog.Debian
	cp -a ChangeLog $(docdir)/changelog
	cd $(docdir) && gzip -9 changelog changelog.Debian
# 	gzip -r9 debian/tmp/usr/local/share/man
#	gzip -9 debian/tmp/usr/local/share/info/*
	dpkg-shlibdeps debian/tmp/usr/local/bin/mfmgr
	dpkg-gencontrol -isp
	chown -R root:root debian/tmp
	chmod -R u+w,go=rX debian/tmp
	dpkg --build debian/tmp ..  

define checkdir
	test -f src/talkport.c -a -f debian/rules
endef

binary: binary-indep binary-arch 

checkroot: 
	$(checkdir)
	test $$(id -u) = 0 
	
.PHONY: binary binary-arch binary-indep clean checkroot
